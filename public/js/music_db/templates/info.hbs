 <div class="ri_main_details">
                    <div class="ri_title"><h2>{{name}}</h2></div>
                    <div class="ri_artist"><h3>By: {{artist}}</h3></div>
                    <div class="ri_addcredits"><h4>{{additional_credits}}</h4></div>
                    <div class="ri_release"><h6>Released: {{release}}</h6></div>
                    <div class="ri_platforms">
                    {{#each platforms}}
                        {{#if youtube}}<a href="{{youtube}}" target="_blank"><i class="fab fa-youtube"></i></a>{{/if}}
                        {{#if spotify}}<a href="{{spotify}}" target="_blank"><i class="fab fa-spotify"></i></a>{{/if}}
                        {{#if bandcamp}}<a href="{{bandcamp}}" target="_blank"><i class="fab fa-bandcamp"></i></a>{{/if}}
                        {{#if applemusic}}<a href="{{applemusic}}" target="_blank"><i class="fab fa-apple"></i></a>{{/if}}
                        {{#if amazonmusic}}<a href="{{amazonmusic}}" target="_blank"><i class="fab fa-amazon"></i></a>{{/if}}
                        {{#if direct_dl}}<a href="{{direct_dl}}" target="_blank"><i class="fas fa-download"></i></a>{{/if}}
                        {{#if weblink_1}}<a href="{{weblink_1}}" target="_blank"><i class="fas fa-globe"></i></a>{{/if}}
                        {{#if weblink_2}}<a href="{{weblink_2}}" target="_blank"><i class="fas fa-globe"></i></a>{{/if}}
                    {{/each}}
                    </div>
                    </div>
                    <div class="ri_extended_details">
                        <div class="ri_description">
                            <h3>Description:</h3>
                            {{{general_description}}}</div>
                        <div class="ri_involvement">
                            <h3>Project Involvement:</h3>
                            {{{project_involvement}}}</div>
                        <div class="ri_credits">
                            <h3>Credits:</h3>
                            <div id="credits_table" class="grid-container">
                            {{#each credits}}
                                
                                {{#each []}}
                                <div class="grid-row-wrapper"><div class="grid-item">{{name}}</div><div class="grid-item">{{role}}</div></div>
                                {{/each}}
                                
                                <div class="grid-item"></div><div class="grid-item"></div>
                            {{/each}}
                            </div>
                        </div>
                    </div>
                    
